<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="Microsoft.Extensions.Configuration" Version="2.1.0" />
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection" Version="2.1.0" />
    <PackageVersion Include="Microsoft.Extensions.Hosting" Version="2.1.0" />
    <PackageVersion Include="System.CommandLine" Version="2.0.0-beta4.23407.1" />
  </ItemGroup>

  <ItemGroup Label="Analyzers">
    <GlobalPackageReference Include="Meziantou.Analyzer" Version="2.0.94" />
    <GlobalPackageReference Include="Roslynator.Analyzers" Version="4.6.1" />
    <GlobalPackageReference Include="SonarAnalyzer.CSharp" Version="9.12.0.78982" />
    <GlobalPackageReference Include="StyleCop.Analyzers.Unstable" Version="1.2.0.507" />
  </ItemGroup>

  <ItemGroup Label="Build">
    <GlobalPackageReference Include="$(Company).SemanticVersioning.MSBuild" Version="2.1.5" />
    <GlobalPackageReference Include="DotNet.ReproducibleBuilds" Version="1.1.1" />
    <GlobalPackageReference Include="DotNet.ReproducibleBuilds.Isolated" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup Label="References">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Condition=" $([MSBuild]::GetTargetFrameworkIdentifier('$(TargetFramework)')) == '.NETFramework' " VersionOverride="1.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>