<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="Microsoft.Extensions.Configuration" Version="2.1.0" />
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection" Version="2.1.0" />
    <PackageVersion Include="Microsoft.Extensions.Hosting" Version="2.1.0" />
    <PackageVersion Include="Microsoft.Extensions.Logging" Version="2.1.0" />
    <PackageVersion Include="Spectre.Console" Version="0.42.0" />
    <PackageVersion Include="System.CommandLine" Version="2.0.0-beta4.23407.1" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net7.0'))">
    <PackageVersion Update="Microsoft.Extensions.Hosting" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
    <PackageVersion Update="Microsoft.Extensions.Hosting" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup Label="Analyzers">
    <GlobalPackageReference Include="Meziantou.Analyzer" Version="2.0.137" />
    <GlobalPackageReference Include="Roslynator.Analyzers" Version="4.9.0" />
    <GlobalPackageReference Include="SonarAnalyzer.CSharp" Version="9.17.0.82934" />
    <GlobalPackageReference Include="StyleCop.Analyzers.Unstable" Version="1.2.0.556" />
  </ItemGroup>

  <ItemGroup Label="Build">
    <GlobalPackageReference Include="$(Company).SemanticVersioning.MSBuild" Version="2.1.5" />
    <GlobalPackageReference Include="DotNet.ReproducibleBuilds" Version="1.1.1" />
    <GlobalPackageReference Include="DotNet.ReproducibleBuilds.Isolated" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup Label="References">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Condition=" $([MSBuild]::GetTargetFrameworkIdentifier('$(TargetFramework)')) == '.NETFramework' " VersionOverride="1.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
