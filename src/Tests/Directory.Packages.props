<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.11.1" />
    <PackageVersion Include="FluentAssertions" Version="6.12.1" />
    <PackageVersion Include="NSubstitute" Version="5.1.0" />
    <PackageVersion Include="xunit" Version="2.9.2" />
  </ItemGroup>

  <ItemGroup>
    <PackageVersion Include="Spectre.Console.Testing" Version="0.48.0" />
    <PackageVersion Include="System.CommandLine" Version="2.0.0-beta4.24528.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageVersion Include="Microsoft.Extensions.Configuration" Version="6.0.1" />
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection" Version="6.0.1" />
    <PackageVersion Include="Microsoft.Extensions.FileSystemGlobbing" Version="6.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
    <PackageVersion Include="Microsoft.Extensions.Logging" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net6.0'))">
    <PackageVersion Update="Spectre.Console.Testing" Version="0.49.1" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net7.0'))">
    <PackageVersion Update="Microsoft.Extensions.Configuration" Version="7.0.0" />
    <PackageVersion Update="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
    <PackageVersion Update="Microsoft.Extensions.FileSystemGlobbing" Version="7.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Hosting" Version="7.0.1" />
    <PackageVersion Update="Microsoft.Extensions.Logging" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
    <PackageVersion Update="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageVersion Update="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageVersion Update="Microsoft.Extensions.FileSystemGlobbing" Version="8.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Logging" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" />
    <Using Include="FluentAssertions" />

    <PackageReference Include="xunit" />
    <Using Include="Xunit" />

    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <ItemGroup>
    <GlobalPackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
    <GlobalPackageReference Include="coverlet.collector" Version="6.0.2" />
    <GlobalPackageReference Include="GitHubActionsTestLogger" Version="2.4.1" />
  </ItemGroup>

</Project>
