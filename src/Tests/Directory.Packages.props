<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.7.2" />
    <PackageVersion Include="FluentAssertions" Version="6.12.0" />
    <PackageVersion Include="NSubstitute" Version="5.1.0" />
    <PackageVersion Include="xunit" Version="2.5.3" />
  </ItemGroup>

  <ItemGroup>
    <PackageVersion Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Logging" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::GetTargetFrameworkIdentifier('$(TargetFramework)')) == '.NETCoreApp' and $([MSBuild]::VersionLessThanOrEquals($([MSBuild]::GetTargetFrameworkVersion('$(TargetFramework)')), '7.0'))">
    <PackageVersion Update="Microsoft.Extensions.Configuration" Version="7.0.0" />
    <PackageVersion Update="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Hosting" Version="7.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Logging" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::GetTargetFrameworkIdentifier('$(TargetFramework)')) == '.NETCoreApp' and $([MSBuild]::VersionLessThanOrEquals($([MSBuild]::GetTargetFrameworkVersion('$(TargetFramework)')), '6.0'))">
    <PackageVersion Update="Microsoft.Extensions.Configuration" Version="6.0.0" />
    <PackageVersion Update="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Hosting" Version="6.0.0" />
    <PackageVersion Update="Microsoft.Extensions.Logging" Version="6.0.0" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageVersion Include="Spectre.Console.Testing" Version="0.47.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" />
    <Using Include="FluentAssertions" />

    <PackageReference Include="xunit" />
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <GlobalPackageReference Include="xunit.runner.visualstudio" Version="2.5.3" />
    <GlobalPackageReference Include="coverlet.collector" Version="6.0.0" />
    <GlobalPackageReference Include="GitHubActionsTestLogger" Version="2.3.3" />
  </ItemGroup>

  <ItemGroup Label="References">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Condition=" $([MSBuild]::GetTargetFrameworkIdentifier('$(TargetFramework)')) == '.NETFramework' " VersionOverride="1.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
