<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" VersionOverride="2.0.0-beta4.23407.1" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).Spectre" />
  </ItemGroup>

  <Choose>
    <When Condition=" $([MSBuild]::IsTargetFrameworkCompatible('netstandard2.0', '$(TargetFramework)')) ">
      <ItemGroup>
        <Compile Remove="Parsing\IndexParser.cs" />
        <Compile Remove="Parsing\RangeParser.cs" />
      </ItemGroup>
    </When>
    <When Condition=" $([MSBuild]::IsTargetFrameworkCompatible('netstandard2.1', '$(TargetFramework)')) ">
      <ItemGroup>
        <Compile Remove="System.Diagnostics.CodeAnalysis.cs" />
      </ItemGroup>
    </When>
  </Choose>

</Project>
